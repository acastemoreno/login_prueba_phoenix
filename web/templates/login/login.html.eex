<h2>Login</h2>
<%= form_for @changeset, login_path(@conn, :post_login), fn f -> %>
  <div class="form_class">
    <%= label f, :email%>
    <%= email_input f, :email%>
    <%= error_tag f, :email %>
  </div>

  <div class="form_class">
    <%= label f, :password%>
    <%= password_input f, :password %>
    <%= error_tag f, :password %>
  </div>

  <%= submit "Login", class: "btn btn-success" %>

<% end %>
